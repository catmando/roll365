<p id="notice"><%= notice %></p>

<h1>Jobs</h1>

<table>
  <thead>
    <tr>
      <th>Solution</th>
      <th>Start on</th>
      <th>Time</th>
      <th>Name</th>
      <th>Finished on</th>
      <th>Purchase order</th>
      <th>Active</th>
      <th>Complete</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.solution_id %></td>
        <td><%= job.start_on %></td>
        <td><%= job.time %></td>
        <td><%= job.name %></td>
        <td><%= job.finished_on %></td>
        <td><%= job.purchase_order %></td>
        <td><%= job.active %></td>
        <td><%= job.complete %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

