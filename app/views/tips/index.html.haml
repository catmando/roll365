.container-fluid

  %h1 Finder

  .row

    .col-2

      = render "search_panel", locals: {q: @q}
          

    .col-6
      %h3 Tip Sites
      = @tips.count 
      listed
      %hr

      %table.table.table-striped


        %thead
          %tr
            %th{align: 'left'}
              %em
                Name
            %th{align: 'left'}
              %em
                Risk Level
            %th{align: 'left', valign: 'top'} Company
            %th{align: 'left', width: '32'} Fee
            %th Description
            

        %tbody
          - @tips.each do |tip|
            %tr
          
              %td{align: 'left', width: '224'}= tip.name
              %td= tip.fire_ant_risk_level
              %td 't.b.d'
              %td= tip.fee
              
              %td= '(soon)'
              %td= link_to 'Show', tip
              %td= link_to 'Edit', edit_tip_path(tip)
              %td= link_to 'Destroy', tip, method: :delete, data: { confirm: "Are you sure you want to delete #{tip.name}?" } 
      %br

      = link_to new_tip_path, class: 'btn btn-secondary' do
        %i.glyphicon.glyphicon-plus
          New Tip Site

  = link_to 'Tip Sites', tips_path