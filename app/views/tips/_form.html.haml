
= form_for @tip do |f|
  - if @tip.errors.any?
    #error_explanation
      %h2= "#{pluralize(@tip.errors.count, "error")} prohibited this tip from being saved:"
      %ul
        - @tip.errors.full_messages.each do |message|
          %li= message

  .form-group
    = f.label :name, class: "col-sm-4 control-label"
    .col-sm-8
      = f.text_field :name, class: "form-control"

    .form-group
    = f.label :fee, class: "col-sm-4 control-label"
    .col-sm-8
      = f.text_field :fee, class: "form-control"     
 
    .form-group
    = f.label :fire_ant_risk_level, class: "col-sm-4 control-label"
    .col-sm-8
      = f.select( :fire_ant_risk_level, %w[low medium high] )
    %p
      .actions
        = f.submit 'Save'


