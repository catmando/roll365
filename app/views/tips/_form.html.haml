= form_for @tip do |f|
  - if @tip.errors.any?
    #error_explanation
      %h2= "#{pluralize(@tip.errors.count, "error")} prohibited this tip from being saved:"
      %ul
        - @tip.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :fee
    = f.text_field :fee
  .field
    = f.label :fire_ant_risk_level
    = f.text_field :fire_ant_risk_level
  .actions
    = f.submit 'Save'
