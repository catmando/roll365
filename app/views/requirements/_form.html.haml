= form_for @requirement do |f|
  - if @requirement.errors.any?
    #error_explanation
      %h2= "#{pluralize(@requirement.errors.count, "error")} prohibited this requirement from being saved:"
      %ul
        - @requirement.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :require
    = f.text_field :require
  .field
    = f.label :certificate_id
    = f.number_field :certificate_id
  .field
    = f.label :for_person
    = f.check_box :for_person
  .field
    = f.label :for_company
    = f.check_box :for_company
  .field
    = f.label :for_location
    = f.check_box :for_location
  .field
    = f.label :preference
    = f.check_box :preference
  .field
    = f.label :description
    = f.text_field :description
  .actions
    = f.submit 'Save'
