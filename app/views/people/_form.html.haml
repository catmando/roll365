
= form_for @person do |form|
  -if @person.errors.any?
    #error_explanation
      %h2= pluralize(person.errors.count, "error")#prohibited this company from being saved:
      %ul
        - @person.errors.full_messages.each do |message|
          %li= message
      

  .form-group
    = form.label :first_name, "First Name", class: "col-md-4 control-label"
    .col-md-8
      = form.text_field :first_name, class: "form-control"

  .form-group
    = form.label :last_name, "Last Name", class: "col-md-4 control-label"
    .col-md-8
      = form.text_field :last_name, class: "form-control"

  .form-group
    = form.label :title, "Title", class: "col-md-4 control-label"
    .col-md-8
      = form.text_field :title, class: "form-control"

  .form-group
    = form.label :available, "Available", class: "col-md-4 control-label"
    .col-md-8
      = form.radio_button(:available, true)
      = form.label(:available, "Yes", value: true)
      &nbsp;
      = form.radio_button(:available, false)
      = form.label(:available, "No", value: false)

  .form-group
    = form.label :available_on, "When Available", class: "col-md-4 control-label"
    .col-md-8
      -#= form.text_field :available_on, class: "form-control"
      = form.datetime_select :available_on
      


    .form-group
    = form.label :OK_to_contact, "OK to Contact", class: "col-md-4 control-label"
    .col-md-8
      = form.radio_button(:OK_to_contact, true)
      = form.label(:OK_to_contact, "Yes", value: true)
      &nbsp;
      = form.radio_button(:OK_to_contact, false)
      = form.label(:OK_to_contact, "No", value: false)


    .form-group
    = form.label :active, "Active", class: "col-md-4 control-label"
    .col-md-8
      = form.radio_button(:active, true)
      = form.label(:active, "Yes", value: true)
      &nbsp;
      = form.radio_button(:active, false)
      = form.label(:active, "No", value: false)

  -#= render :partial => "address_form", locals: {form: form}

  .actions
    = form.submit

  .end