.container-fluid
  
  -unless params[:company_id]
    %h1
      = @person.display_name
    %h3
      = @person.company.name

  %p
    -if @person.addresses.empty?
      This person is homeless!
      = link_to "person_address...", person_address_path(@person)
    -else
      = @person.display_address 
      = link_to "address...", edit_address_path(@address)

  %p

    -#= render 'address_modal'
  %p

    = render "shared/contacts_for"


  %hr

    .row
      .col-sm-2
        %em
          Attributes
      .col-sm-10
        %em
          Settings
    %p
  .row      
    .col-sm-2
      First name:
    .col-sm-10
      = @person.first_name
  .row
    .col-sm-2
      Last Name:
    .col-sm-10
      = @person.last_name
  .row
    .col-sm-2
      Title:
    .col-sm-10
      = @person.title
  .row
    .col-sm-2
      Available:
    .col-sm-10
      = @person.available ? 'Yes' : 'No'

  .row
    .col-sm-2
      Available_on:
    .col-sm-10
      = @person.available_on.strftime("%a, %B %d, %Y - %I:%M %P %Z ")

  .row
    .col-sm-2
      OK To Contact:
    .col-sm-10
      = @person.OK_to_contact ? 'Yes' : 'No'

  .row
    .col-sm-2
      Active:
    .col-sm-10
      = @person.active ? 'Yes' : 'No'
  %p
  = link_to 'Person', edit_person_path(@person)
  &nbsp;


  - unless @parent.nil?
    = link_to 'Company', company_path(@parent)
  
  .row
  
  = link_to people_path, class: 'btn btn-secondary' do
    %i.glyphicon.glyphicon-plus
    People
  &nbsp
  = link_to companies_path, class: 'btn btn-secondary' do
    %i.glyphicon.glyphicon-plus
    Companies
