
%h1
  = @person.display_name

%p
  -if @person.addresses.empty?
    = link_to 'Create address', new_person_address_path(@person)
  -else  
    %nbsp
    = link_to '...edit', @person.display_address
    
  
  %p

  = render "identifiers/contacts_for"

  = link_to "... more", person_address_path(@person)
  %p



%hr

.container-fluid
  .row
    .col-sm-2
      %em
        Attributes
    .col-sm-10
      %em
        Settings
  %p
  .row      
    .col-sm-2
      First name:
    .col-sm-10
      = @person.first_name
  .row
    .col-sm-2
      Last Name:
    .col-sm-10
      = @person.last_name
  .row
    .col-sm-2
      Title:
    .col-sm-10
      = @person.title
  .row
    .col-sm-2
      Available:
    .col-sm-10
      = @person.available ? 'Yes' : 'No'

  .row
    .col-sm-2
      Available_on:
    .col-sm-10
      = @person.available_on.strftime("%a, %B %d, %Y - %I:%M %P %Z ")

  .row
    .col-sm-2
      OK To Contact:
    .col-sm-10
      = @person.OK_to_contact ? 'Yes' : 'No'

  .row
    .col-sm-2
      Active:
    .col-sm-10
      = @person.active ? 'Yes' : 'No'
%p
= link_to 'Edit', edit_person_path(@person)
&nbsp;
= link_to 'Back', people_path
