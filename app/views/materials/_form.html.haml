= form_for @material do |f|
  - if @material.errors.any?
    #error_explanation
      %h2= "#{pluralize(@material.errors.count, "error")} prohibited this material from being saved:"
      %ul
        - @material.errors.full_messages.each do |message|
          %li= message

  .form-group
    = f.label :name, class: "col-sm-4 control-label"
    .col-sm-8
      = f.text_field :name, class: "form-control"

    .form-group
    = f.label :description, class: "col-sm-4 control-label"
    .col-sm-8
      = f.text_field :description, class: "form-control"      

  
  .actions
    = f.submit 'Save'
