
.container-fluid

  %h1 Finder
  
  .row

    .col-2

      = render "search_panel", locals: {q: @q}
          
    .col-6
      %h3 Addresses
      = @addresses.count 
      listed
      = will_paginate    
        
      %hr

      %table.table.table-striped


        %thead
          %tr
            %th
              %em
                Name
            %th
              %em
                Street Address
            %th
              %em
                City
            %th
              %em
                State

            %th
              %em
                Post Code
            
        %tbody
          - @addresses.each do |addr|
            %tr.data
              
              %td{align: 'left', width: '224'}= link_to addr.addressable.display_name, company_path(addr)
              %td{align: 'left', width: '224'}= addr.street_address
              %td{align: 'left', width: "64"}= addr.city
              %td= addr.state
              %td= addr.post_code
              %td= map_reference
            
              %td= link_to 'Show', addr
              %td= link_to 'Edit', edit_address_path(addr)
              %td= link_to 'Destroy', address, method: :delete, data: { confirm: "Are you sure you want to delete #{addr}?" } 
      %br



-#= link_to 'New Address', new_address_path