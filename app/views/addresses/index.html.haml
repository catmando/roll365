
.container-fluid

  %h1 Finder
  
  .row

    .col-2

      = render "search_panel", locals: {q: @q}
          
    .col-6
      %h3 Addresses
      = @addresses.count 
      listed
      = will_paginate    
        
      %hr

      %table.table.table-striped


        %thead
          %tr
            %th
              %em
                Name
            %th
              %em
                Street Address
            %th
              %em
                City
            %th
              %em
                State

            %th
              %em
                Post Code
            
        %tbody
          - @addresses.each do |addr|
            %tr
              -unless addr.addressable.nil?
                %td= link_to "#{addr.addressable.display_name} "+"#{addr.id}", company_path(addr)
              -else
                -flash[:alert] = "Alert:  address record #{addr.id} has invalid parent: #{addr.addressable_type}, #{addr.addressable_id}."
              %td= addr.street_address
              %td= addr.city
              %td= addr.state
              %td= addr.post_code
              %td= map_reference
            
              %td= link_to 'Show', addr
              %td= link_to 'Edit', edit_address_path(addr)
              %td= link_to 'Destroy', address, method: :delete, data: { confirm: "Are you sure you want to delete #{addr}?" } 
      %br
