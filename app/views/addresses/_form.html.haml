= form_for @address do |f|
  - if @address.errors.any?
    #error_explanation
      %h2= "#{pluralize(@address.errors.count, "error")} prohibited this address from being saved:"
      %ul
        - @address.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :street_address,
    = f.text_field :street_address,
  .field
    = f.label :city,
    = f.text_field :city,
  .field
    = f.label :state,
    = f.text_field :state,
  .field
    = f.label :po_box
    = f.text_field :po_box
  .field
    = f.label :map_reference
    = f.text_field :map_reference
  .field
    = f.label :longitude
    = f.text_field :longitude
  .field
    = f.label :latitude
    = f.text_field :latitude
  .field
    = f.label :company
    = f.text_field :company
  .field
    = f.label :person
    = f.text_field :person
  .field
    = f.label :identifier
    = f.text_field :identifier
  .field
    = f.label :cert
    = f.text_field :cert
  .field
    = f.label :requirement
    = f.text_field :requirement
  .actions
    = f.submit 'Save'
