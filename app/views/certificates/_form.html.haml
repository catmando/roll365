= form_for @certificate do |f|
  - if @certificate.errors.any?
    #error_explanation
      %h2= "#{pluralize(@certificate.errors.count, "error")} prohibited this certificate from being saved:"
      %ul
        - @certificate.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :for_person
    = f.check_box :for_person
  .field
    = f.label :for_company
    = f.check_box :for_company
  .field
    = f.label :for_equipment
    = f.check_box :for_equipment
  .field
    = f.label :for_location
    = f.check_box :for_location
  .field
    = f.label :active
    = f.check_box :active
  .actions
    = f.submit 'Save'
