
%h3 Search
= search_form_for @q do |f|
  
  .field
    = f.label :name
    = f.text_field :name_cont, class: 'form-control'
    = f.label :value
    = f.text_field :value_cont, class: 'form-control'
    = f.submit class: 'btn btn-primary'
    .btn
      = link_to "Clear", request_path, class: "btn btn-secondary"      
    %hr

    %h5
      = will_paginate


