= form_for @identifier do |f|
  - if @identifier.errors.any?
    #error_explanation
      %h2= "#{pluralize(@identifier.errors.count, "error")} prohibited this identifier from being saved:"
      %ul
        - @identifier.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :company
    = f.text_field :company
  .field
    = f.label :person
    = f.text_field :person
  .field
    = f.label :name{30}
    = f.text_field :name{30}
  .field
    = f.label :value{30}
    = f.text_field :value{30}
  .field
    = f.label :rank
    = f.number_field :rank
  .actions
    = f.submit 'Save'
