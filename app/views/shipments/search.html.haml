
.container-fluid


  %h1 Finder
  .row
    .col-2
      = render "search_panel", locals: {q: @q}
   
    .col-2
      %h3 Shipments
      = @shipments.count.to_s
      listed
      = will_paginate  
    .col-sm-2
      .col
        = link_to new_shipment_path, class: 'btn btn-secondary' do
          %i.glyphicon.glyphicon-plus
            New Shipment

      %table.table.table-striped

        %thead
          %tr
            %th{align: 'left'} 
              %em
                Tracking ID
            %th{align: 'left', valign: 'top'}
              %em
                Ship From
            %th{align: 'left', width: '32'}
              %em 
                Ship To
            %th 
              %em
                Deadline
            %th
              %em
                Cargo
            %th
              %em
                Load
            %th
              %em
                Quote Basis
            %th
              %em
                Quote Complete

        %tbody
          - @shipments.each do |shipment|
            %tr.data 
              %td= shipment.tracking_id
              %td= shipment.status
              %td= shipment.ship_from
              %td= shipment.ship_to
              %td= shipment.deadline
              %td= shipment.cargo
              %td= shipment.utilization
              %td= shipment.quote_basis
              %td= shipment.quote_complete
              
              %td= link_to 'Show', shipment
              %td= link_to 'Update', edit_shipment_path(shipment)
      %br

  .nbsp
    %p
