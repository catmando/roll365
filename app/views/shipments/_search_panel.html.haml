%h3 Search
= search_form_for @q do |f|
  .field
    
    = f.label :tracking_id
    = f.text_field :tracking_id_cont, class: 'form-control'

    = f.label :ship_from
    = f.text_field :ship_from_cont, class: 'form-control'

    = f.label :ship_to
    = f.text_field :ship_to_cont, class: 'form-control'

    = f.label :pickup
    = f.text_field :pickup_cont, class: 'form-control'

    = f.label :deadline
    = f.text_field :deadline_cont, class: 'form-control'

    = f.label :cargo
    = f.text_field :cargo_cont

    
    = f.submit class: 'btn btn-primary'
    .btn
      = link_to "Clear", request_path, class: "btn btn-secondary"      
    %hr

    %p

    = link_to new_shipment_path, class: 'btn btn-secondary' do
      %i.glyphicon.glyphicon-plus
        New Shipment
