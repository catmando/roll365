= form_for @schedule do |f|
  - if @schedule.errors.any?
    #error_explanation
      %h2= "#{pluralize(@schedule.errors.count, "error")} prohibited this schedule from being saved:"
      %ul
        - @schedule.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :day
    = f.datetime_select :day
  .field
    = f.label :job_id
    = f.number_field :job_id
  .field
    = f.label :equipment_units_today
    = f.number_field :equipment_units_today
  .actions
    = f.submit 'Save'
